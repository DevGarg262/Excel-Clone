    </div>

    <div class="formula" style="background: whitesmoke;">
        <img src="C:\Users\Admin\Desktop\Development\Lec6_Excel_electron\activity\pictures\icon fx.png" class="fx">
        <input type="text" id="id1" class="address" readonly="" placeholder="Address" style="width: 201px">

        <input type="text" class="cell-formula" placeholder="Formula" style="width: 845px">
    </div>

    <div class="content">
        <div class="top-left-cell"></div>
        <div class="top-row">
            <%for(let j=0 ; j<26 ; j++){%>
            <div class="top-row-cell" c-id=<%=j%>> <%= String.fromCharCode(65+j) %> </div>
            <%}%>
        </div>
        <div class="left-col">
            <% for(let i=0 ; i<100 ; i++) {%>
            <div class="left-col-cell" c-id=<%=i%>> <%=i+1%></div>
            <%}%>
        </div>


        <div class="cells">
            <% for(let i=0 ; i<100 ; i++) {%>
            <div class="row">
                <%for(let j=0 ; j<26 ; j++){%>
                <div class="cell" contenteditable="true" r-id=<%=i%> c-id=<%=j%>></div>
                <%}%>
                </div>
                <%}%>
            </div>

        </div>

        <div class="sheets" style="display: flex;justify-content: flex-start;">
            <div><button class="dropbtn">Sheet 1</button></div> 
            <div style="margin-left:-11px ;"><button><img src="C:\Users\Admin\Desktop\Development\Lec6_Excel_electron\activity\pictures\newsheet.png" width="24px"></button></div> 
