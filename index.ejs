                <div><img src="C:\Users\Admin\Desktop\Development\Lec6_Excel_electron\activity\pictures\fontcolor.webp"
                        width="20px" style="
                            height: 49px;
                            width: 56px;"> </div>


                <div>
                    <input type="color" name="cell-text" id="cell-text" value="#ff0000" style=" width: 21px;
                      height: 22px;
                      border: 21px;
                      margin-top: 30px;
                      margin-left: -14px;
